<%- include ("partials/header.ejs") %>
<link rel="stylesheet" href="weathersearch.css">

<h1><i class="fas fa-cloud-sun"></i>Get the weather information of any place.</h1>

<div class="container">
    <div class="container">
        <div class="row">
            <form action="/weather" method="GET">
                <div class="form-group">
                    <input class="form-control text-center" type="text" placeholder="Enter the city" name="weather">
                    <input class="form-control text-center" type="text" placeholder="Enter the country abbreviation (if one city in multiple countries)" name="country">
                </div>
                <div class="form-group">
                    <input class="btn btn-md btn-warning btn-block" type="submit">
                </div>
            </form>
        </div>
    </div>
    </div>

